<h1>Articles Tagged with <%= "\"#{@tag.name}\"" %></h1>

<ul>
  <% @tag.articles.each do |article| %>
    <li><h2><%= link_to article.title, article_path(article) %></h2></li>
  <% end %>
</ul>

<h2>___________</h2>

<%= link_to "<< To Articles List", articles_path %> <br />

<%= link_to "<< To Tags List", tags_path %> <br />

<% if logged_in? %>
<%= link_to "[X]  Delete Tag", tag_path(@tag), method: :delete, data: {confirm: "Really delete tag \"#{@tag.name}?\""} %>
<% end %>
