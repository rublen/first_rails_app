<h1>All Tags</h1>

<ul id="tags">
  <% @tags.each do |tag| %>
    <li>
    <% if tag.articles.count == 0 %>
    	<% tag.destroy %>
    <% else %>
      <h2><%= link_to tag.name, tag_path(tag) %></h2>
      <%= link_to "[X] Delete", tag_path(tag), method: :delete, data: {confirm: "Really delete tag \"#{tag.name}?\""} %>
    <% end %>  
    </li>
    
  <% end %>
</ul>
<h2>___________</h2>
<%= link_to "<< Back to Articles List", articles_path %> <br />
